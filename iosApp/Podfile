# Bite-Size Reader iOS - Podfile

# Minimum iOS deployment target
platform :ios, '15.0'

# Use frameworks
use_frameworks!

# Inhibit all warnings from CocoaPods dependencies
inhibit_all_warnings!

target 'iosApp' do
  # Shared Kotlin Multiplatform Framework
  pod 'Shared', :path => '../shared'

  # iOS-specific dependencies can be added here if needed
  # Example:
  # pod 'Kingfisher', '~> 7.0'  # For image caching (alternative to Coil)

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Set minimum deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Enable Swift optimization for release builds
      if config.name == 'Release'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
        config.build_settings['SWIFT_COMPILATION_MODE'] = 'wholemodule'
      end

      # Disable bitcode (deprecated in Xcode 14+)
      config.build_settings['ENABLE_BITCODE'] = 'NO'

      # Ensure proper architecture support
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      config.build_settings['VALID_ARCHS'] = 'arm64'

      # Code signing
      config.build_settings['CODE_SIGN_IDENTITY'] = ''
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
    end
  end
end
